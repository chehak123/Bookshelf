<%- include('partials/header'); -%>

<h1>Compose</h1>

<form method="POST" action="/compose" id="composeform">

    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="posttitle" > 
    </div>

    <div class="form-group">
        <label>Author</label>
        <input class="form-control" type="text" name="postauthor" > 
    </div>

    <div class="form-group">
        <label>Genre</label>
        <input class="form-control" type="text" name="postgenre" > 
    </div>

    <div class="form-group">
        <label>Image link</label>
        <input class="form-control" type="text" name="postimage" > 
    </div>

    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" rows="3" name="posttext"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>

</form>

<%- include('partials/footer'); -%>