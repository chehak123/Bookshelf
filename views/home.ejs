<%- include('partials/header'); -%>
<!-- <h1>Home</h1> -->

<% posts.forEach(function(post){ %>
   
   <div class="row flex-top" style="display: inline-flex; margin: 2%;">
    <div class="card" style="width: 30rem;">
      <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
      <div class="card-body">
        <h4 class="card-title"><b><%= post.title %></b></h4>
        <h5><%= post.author %></h5>
        <h5><%= post.genre %></h5>
        <p class="card-text"><%= post.summary %></p>
        <div class="inline-flex">
        <a href="/posts/<%=post._id %>" class="btn btn-primary">Read more</a>
        
        <!-- <form method="POST" action="/" id="bookmarkform"> -->
          <% if(post.bookmark==1){ %>
            <button class="btn btn-success" id = "bookmarking" disabled>Bookmarked</button>
          <% } else { %>
            <button class="btn btn-success" id = "bookmarking" disabled>Bookmark</button>
          <% } %>


        <!-- <button class="btn btn-success" id = "bookmarking" disabled>Bookmark</button> -->
        <!-- </form> -->

      </div>
      </div>
    </div>
  </div>

    
<% }) %>
    

